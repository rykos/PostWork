<div style="width: 40%; margin: auto; margin-top: 5%; margin-bottom: 5%; padding: 2%;" class="border">
    <form method="POST" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" id="title" name="title">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea rows="10" type="text" class="form-control" id="description" name="description"></textarea>
        </div>
        <div class="form-group">
            <label>Tags separated by ,</label>
            <input type="text" class="form-control" id="tags" name="tags">
        </div>
        <div class="form-group">
            <label>Avatar</label>
            <input type="file" class="form-control-file" id="avatar" name="avatar">
        </div>
        <div class="form-group">
            <label>Salary</label>
            <div class="row">
                <div class="col">
                    <input type="number" class="form-control" id="salaryMin" name="salaryMin">
                </div>
                <div class="col">
                    <input type="number" class="form-control" id="salaryMax" name="salaryMax">
                </div>
            </div>
        </div>
        <input type="submit" class="form-control btn-success" value="Create">
    </form>
</div>