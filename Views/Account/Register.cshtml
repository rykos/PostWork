<div class="container" style="margin-top: 20%;">
    <div style="width: 30%; margin: auto; padding: 1%; background-color: #c5ffc2;" class="border border-success rounded">
        <form asp-action="Register" method="POST">
            <div class="form-group">
                <center>
                    <h1>Register</h1>
                </center>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" id="email" name="email" placeholder="email">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="username" name="username" placeholder="username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success form-control rounded-pill">Register</button>
            </div>
            <div class="form-group">
                <button asp-action="login" class="btn btn-outline-secondary form-control rounded-pill">Login</button>
            </div>
        </form>
    </div>
</div>