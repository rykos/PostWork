<div class="container" style="margin-top: 20%;">
    <div style="width: 30%; margin: auto; padding: 1%; background-color: #c5ffc2;" class="border border-success rounded">
        <form asp-action="Login" method="POST">
            <div class="form-group">
                <center>
                    <h2>Recover Password</h2>
                </center>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" id="email" name="email" placeholder="email">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="username" name="username" placeholder="username">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success form-control rounded-pill">Reset Password</button>
            </div>
        </form>
        <a asp-action="register"><button class="btn btn-outline-secondary form-control rounded-pill">Back to Login</button></a>
    </div>
</div>